header.header
  nav.nav.nav--tours
    a.nav__el(href='/') Tasker 
  .header__logo
    img(src='/img/logo-white.png' alt='Natours logo')
  nav.nav.nav--user
    if user
      a.nav__el.nav__el--logout Log out
      a.nav__el(href='/user/me')
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.firstname}`)
        span= user.firstname
    else
      a.nav__el(href='/user/login') Log in
      a.nav__el.nav__el--cta(href='/user/signup') Sign up