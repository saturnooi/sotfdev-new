            //-   span= tasker.province
            //- .card__data
            //-   svg.card__icon
                //- use(xlink:href='/img/icons.svg#icon-flag')
              //- span= `${tasker.province}`
            //- .card__data
            //-   svg.card__icon
            //-     use(xlink:href='/img/icons.svg#icon-user')
            //-   span= `${tasker.maxGroupSize} people`

          .card__footer
            p
              span.card__footer-value= `${tasker.reviewScore} %`
            p.card__ratings
            a.btn.btn--green.btn--small(href=`/tasker/${tasker.collection.collectionName}/${tasker.id}`) Details